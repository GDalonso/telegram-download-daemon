# Telegram Bot Token (get from @BotFather)
TELEGRAM_TOKEN=your_bot_token_here

# Telegram API credentials (get from https://my.telegram.org/apps)
TELEGRAM_DAEMON_API_ID=your_api_id
TELEGRAM_DAEMON_API_HASH=your_api_hash

# Private channel ID (format: -1001234567890)
TELEGRAM_DAEMON_CHANNEL=your_private_channel_id

# Public channel ID (format: -1001234567890)
TELEGRAM_DAEMON_CHANNEL_PUBLIC=your_public_channel_id

# Local download directory path (absolute path on host)
DOWNLOAD_PATH=/path/to/your/download/directory
